{
  "entities": {
    "user": {
      "title": "User",
      "description": "Represents a user of the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "points": {
          "type": "number",
          "description": "Points earned by the user for contributions."
        },
        "role": {
          "type": "string",
          "enum": ["user", "admin"],
          "description": "The user's role."
        }
      },
      "required": ["uid", "displayName", "email", "points", "role"]
    },
    "accessory": {
      "title": "Accessory",
      "description": "Represents a mobile device accessory.",
      "type": "object",
      "properties": {
        "accessoryType": {
          "type": "string"
        },
        "models": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "A list of compatible device models."
        },
        "contributor": {
          "type": "object",
          "properties": {
            "uid": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "points": {
              "type": "number"
            }
          }
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time"
        },
        "source": {
          "type": "string"
        }
      },
      "required": ["accessoryType", "models"]
    },
    "contribution": {
      "title": "Contribution",
      "description": "A user-submitted data contribution for review.",
      "type": "object",
      "properties": {
        "accessoryType": {
          "type": "string"
        },
        "models": {
          "type": "array",
          "items": {
            "type": "string"
          },
           "description": "A list of compatible device models."
        },
        "source": {
          "type": "string",
          "format": "uri"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "approved", "rejected"]
        },
        "submittedAt": {
          "type": "string",
          "format": "date-time"
        },
        "submittedBy": {
          "type": "string",
          "description": "UID of the user who submitted."
        }
      },
      "required": [
        "accessoryType",
        "models",
        "status",
        "submittedAt",
        "submittedBy"
      ]
    },
    "category": {
      "title": "Category",
      "description": "Represents an accessory category.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["name"]
    }
  },
  "auth": {
    "providers": ["password", "phone"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "Stores public user profile information."
    },
    "/accessories/{accessoryId}": {
      "schema": {
        "$ref": "#/entities/accessory"
      },
      "description": "Stores approved accessory compatibility data."
    },
    "/contributions/{contributionId}": {
      "schema": {
        "$ref": "#/entities/contribution"
      },
      "description": "Stores user-submitted data pending review."
    },
    "/categories/{categoryId}": {
      "schema": {
        "$ref": "#/entities/category"
      },
      "description": "Stores available accessory categories."
    }
  }
}
